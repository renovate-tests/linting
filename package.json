{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "create-github-release": "conventional-github-releaser -p angular",
    "eslint-check:base": "eslint --print-config packages/eslint-config-rg-base/index.js | eslint-config-prettier-check",
    "eslint-check:node": "eslint --print-config packages/eslint-config-rg-node/index.js | eslint-config-prettier-check",
    "eslint-check:node-babel": "eslint --print-config packages/eslint-config-rg-node-babel/index.js | eslint-config-prettier-check",
    "eslint-check:react": "eslint --print-config packages/eslint-config-rg-react/index.js | eslint-config-prettier-check",
    "find-unused-rules:base": "eslint-find-rules -u packages/eslint-config-rg-base/index.js",
    "find-unused-rules:node": "eslint-find-rules -u packages/eslint-config-rg-node/index.js",
    "find-unused-rules:node-babel": "eslint-find-rules -u packages/eslint-config-rg-node-babel/index.js",
    "find-unused-rules:react": "eslint-find-rules -u packages/eslint-config-rg-react/index.js",
    "format": "eslint --fix .",
    "lint": "eslint .",
    "publish": "run-s lint && lerna publish --conventional-commits"
  },
  "devDependencies": {
    "conventional-github-releaser": "^1.1.12",
    "eslint": "^4.5.0",
    "eslint-find-rules": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "lerna": "^2.1.2",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.6.1"
  },
  "dependencies": {
    "eslint-config-prettier": "^2.4.0"
  }
}
